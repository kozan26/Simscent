---
const { title = 'Blog — simscent', description = 'Simscent blog', ogImage } = Astro.props;
---
<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>{title}</title>
  <meta name="description" content={description} />

  <script async src="https://www.googletagmanager.com/gtag/js?id=G-7LCE4Z60ZB"></script>
  <script>window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments)};gtag('js',new Date());gtag('config','G-7LCE4Z60ZB');</script>

  <link rel="icon" href="/assets/logo.svg" type="image/svg+xml">
  <link rel="preconnect" href="https://fonts.googleapis.com"/>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet"/>

  <meta property="og:type" content="website"/>
  <meta property="og:title" content={title}/>
  <meta property="og:description" content={description}/>
  {ogImage && <meta property="og:image" content={ogImage}/>}

  <style>
    :root{
      --brand-primary:#B99B6B;--brand-secondary:#A08C62;
      --text:#27272a;--muted:#6b7280;--border:#e5e7eb;--card:#fff;--shell:#f7f6f4;
      --elev-1:0 6px 20px rgba(0,0,0,.06);--elev-2:0 10px 30px rgba(0,0,0,.08);
      --radius:28px;
    }
    @media (prefers-color-scheme: dark){
      :root{--text:#e5e7eb;--muted:#9ca3af;--border:#2b2f36;--card:#0f172a;--shell:#0b1220}
      a, .link{color:#d4c6a3}
    }

    *{box-sizing:border-box;margin:0;padding:0}
    body{
      font-family:'Inter',system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Helvetica Neue,Arial,sans-serif;
      color:var(--text);line-height:1.65;background:
        radial-gradient(1200px 1200px at -10% -20%, rgba(185,155,107,.12), transparent 60%),
        radial-gradient(1000px 800px at 110% 10%, rgba(160,140,98,.10), transparent 50%),
        var(--shell);
    }
    a{color:var(--brand-secondary);text-decoration:none;font-weight:700}
    a:hover{text-decoration:underline}

    .wrap{max-width:1200px;margin:28px auto;padding:18px}
    .chrome{background:var(--card);border:1px solid var(--border);border-radius:var(--radius);box-shadow:var(--elev-2);overflow:hidden}

    header{display:flex;align-items:center;justify-content:space-between;padding:18px 22px;border-bottom:1px dashed var(--border)}
    .brand{display:flex;align-items:center;gap:10px;font-weight:800;font-size:22px;letter-spacing:-.02em;font-family:'Playfair Display',serif}
    .brand img{width:28px;height:28px}
    .btn{display:inline-flex;align-items:center;gap:8px;border:1px solid var(--border);background:#fff;padding:9px 14px;border-radius:999px;font-weight:700}
    .btn:hover{box-shadow:var(--elev-1)}
    @media (prefers-color-scheme: dark){ .btn{background:#0b1322} }

    .hero{display:grid;grid-template-columns:1.2fr 1fr;gap:26px;align-items:center;padding:24px}
    @media(max-width:900px){.hero{grid-template-columns:1fr;gap:18px}}
    .hero-img{width:100%;aspect-ratio:16/9;border-radius:22px;object-fit:cover;border:1px solid var(--border);box-shadow:var(--elev-1)}
    .hero h1{font-family:'Playfair Display',serif;font-size:clamp(40px,5.6vw,60px);line-height:1.05;letter-spacing:-.03em;margin-bottom:10px;color:#1f2937}
    .hero p{color:var(--muted);font-size:17px;max-width:640px}
    .hero-cta{display:inline-block;margin-top:14px;border-radius:12px;padding:10px 14px;background:var(--text);color:#fff}
    .hero-cta:hover{transform:translateY(-1px)}

    .grid{display:grid;grid-template-columns:repeat(12,minmax(0,1fr));gap:18px;padding:24px}
    .col{grid-column:span 12}
    @media(min-width:700px){.col{grid-column:span 6}}
    @media(min-width:1100px){.col{grid-column:span 4}}

    .card{display:flex;flex-direction:column;gap:12px;border:1px solid var(--border);border-radius:20px;background:#fff;box-shadow:var(--elev-1);padding:12px;transition:transform .2s, box-shadow .2s}
    .card:hover{transform:translateY(-3px);box-shadow:0 18px 40px rgba(0,0,0,.12)}
    @media (prefers-color-scheme: dark){ .card{background:#0f172a} }
    .thumb{width:100%;aspect-ratio:16/10;border-radius:14px;object-fit:cover;background:#e2e8f0}
    .meta{display:flex;gap:10px;align-items:center;color:var(--muted);font-size:12px}
    .title{font-family:'Playfair Display',serif;font-size:20px;color:#1f2937}
    @media (prefers-color-scheme: dark){ .title{color:#e5e7eb} }

    .prose{padding:28px;max-width:820px}
    .prose h1,.prose h2,.prose h3{font-family:'Playfair Display',serif;color:#1f2937}
    .prose h1{font-size:clamp(36px,5vw,52px);margin:.2em 0 .5em}
    .prose h2{font-size:28px;margin:1.1em 0 .6em}
    .prose p{margin:.8em 0}
    .prose img{max-width:100%;border-radius:18px;border:1px solid var(--border);box-shadow:var(--elev-1)}
    .tag{display:inline-flex;align-items:center;gap:6px;border:1px solid var(--border);background:var(--shell);padding:6px 10px;border-radius:999px;font-size:12px;font-weight:700;color:var(--text)}
    footer{padding:18px;text-align:center;color:var(--muted);border-top:1px dashed var(--border)}
  </style>
</head>
<body>
  <main class="wrap">
    <div class="chrome">
      <header>
        <a class="brand" href="/"><img src="/assets/logo.svg" alt="simscent"/>simscent</a>
        <nav><a class="btn" href="https://www.simscent.com/">Ana Sayfa</a></nav>
      </header>

      <slot />
      <footer>© {new Date().getFullYear()} simscent · Blog</footer>
    </div>
  </main>
</body>
</html>
