---
const {
  title = 'Blog — simscent',
  description = 'Parfüm hakkında kısa, pratik yazılar.',
  ogImage,
} = Astro.props;
---
<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="icon" href="/assets/logo.svg" type="image/svg+xml">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com"/>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet"/>

  <!-- Social -->
  <meta property="og:type" content="website"/>
  <meta property="og:title" content={title}/>
  <meta property="og:description" content={description}/>
  {ogImage && <meta property="og:image" content={ogImage}/>}

  <style>
    :root{
      --brand:#B99B6B;              /* simscent altın tonu */
      --ink:#1f2937; --ink-2:#374151; --muted:#6b7280;
      --card:#fff; --shell:#f7f6f4; --border:#e5e7eb;
      --e1:0 6px 18px rgba(0,0,0,.06); --e2:0 12px 34px rgba(0,0,0,.10);
      --r:22px;
    }
    @media (prefers-color-scheme: dark){
      :root{ --ink:#e5e7eb; --ink-2:#cbd5e1; --muted:#9ca3af;
             --card:#0f172a; --shell:#0b1220; --border:#233044; }
    }
    *{box-sizing:border-box;margin:0;padding:0}
    body{font-family:'Inter',system-ui,Segoe UI,Roboto,Arial,sans-serif;background:var(--shell);color:var(--ink)}
    a{color:var(--ink);text-decoration:none}
    a:hover{color:var(--brand)}
    .page{max-width:1200px;margin:28px auto;padding:0 18px}
    .chrome{background:var(--card);border:1px solid var(--border);border-radius:26px;box-shadow:var(--e2);overflow:hidden}
    /* header */
    .hdr{display:flex;align-items:center;justify-content:space-between;padding:16px 20px;border-bottom:1px dashed var(--border)}
    .brand{display:flex;align-items:center;gap:10px;font:800 22px 'Playfair Display',serif;letter-spacing:-.02em}
    .brand img{width:28px;height:28px}
    .nav{display:flex;align-items:center;gap:18px}
    .nav a{font-weight:700;font-size:14px;color:var(--ink-2)}
    .pill{border-radius:999px;border:1px solid var(--border);padding:8px 14px;font-weight:800}
    .pill:hover{box-shadow:var(--e1)}
    @media (max-width:720px){ .nav .hide-sm{display:none} }

    /* hero */
    .hero{position:relative;min-height:460px;display:flex;flex-direction:column;justify-content:flex-end;gap:14px;padding:22px;border-bottom:1px dashed var(--border)}
    .hero::before{content:"";position:absolute;inset:0;background:linear-gradient(to top, rgba(0,0,0,.62), rgba(0,0,0,.28), rgba(0,0,0,.08));border-bottom:1px solid transparent}
    .hero>*{position:relative;z-index:2}
    .hero h1{font:900 clamp(34px,5vw,54px)/1.05 'Inter',sans-serif;color:#fff;letter-spacing:-.02em}
    .hero p{color:#fff;opacity:.92;max-width:740px}
    .cta{display:inline-block;background:var(--brand);color:#111827;border:none;border-radius:12px;padding:11px 16px;font-weight:900}
    .cta:hover{filter:brightness(.95)}
    .hero-img{position:absolute;inset:0;background-size:cover;background-position:center}

    /* grid */
    .wrap{padding:22px}
    .h2{font:800 24px 'Inter',sans-serif;margin:8px 0 10px}
    .grid{display:grid;grid-template-columns:repeat(12,1fr);gap:18px}
    .col{grid-column:span 12}
    @media(min-width:700px){.col{grid-column:span 6}}
    @media(min-width:1050px){.col{grid-column:span 4}}
    .card{display:flex;flex-direction:column;gap:10px;border:1px solid var(--border);border-radius:18px;background:var(--card);box-shadow:var(--e1);overflow:hidden;transition:transform .18s, box-shadow .18s}
    .card:hover{transform:translateY(-3px);box-shadow:0 18px 42px rgba(0,0,0,.12)}
    .thumb{width:100%;aspect-ratio:16/10;object-fit:cover;background:#e2e8f0}
    .meta{display:flex;gap:10px;align-items:center;color:var(--muted);font-size:12px}
    .title{font-family:'Playfair Display',serif;font-size:20px;color:var(--ink)}
    .desc{color:var(--muted);font-size:14px}

    /* article page */
    .prose{max-width:820px;padding:28px}
    .prose h1{font-family:'Playfair Display',serif;font-size:clamp(36px,5vw,52px);margin:.2em 0 .5em}
    .prose img{max-width:100%;border-radius:16px;border:1px solid var(--border);box-shadow:var(--e1)}
    .footer{padding:16px;text-align:center;color:var(--muted);border-top:1px dashed var(--border)}
  </style>
</head>
<body>
  <main class="page">
    <div class="chrome">
      <header class="hdr">
        <a class="brand" href="/"><img src="/assets/logo.svg" alt="simscent"/>simscent</a>
        <nav class="nav">
          <a class="hide-sm" href="https://www.simscent.com/">Ana Sayfa</a>
          <a class="hide-sm" href="/"><b>Blog</b></a>
          <a class="pill" href="https://www.simscent.com/#signup">Kayıt Ol</a>
        </nav>
      </header>

      <slot />

      <div class="footer">© {new Date().getFullYear()} simscent · Blog</div>
    </div>
  </main>
</body>
</html>
