---
// apps/blog/src/layouts/BaseLayout.astro

interface Props {
	title: string;
	description: string;
	ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
---
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={new URL(ogImage, Astro.url).href} />}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">

    <style is:global>
        :root {
            --primary: #d99b66;
            --background-light: #fdfbf7;
            --text-light: #3a3a3a;
            --text-muted: #6b5e51;
            --border: #eee;
        }
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-light);
            color: var(--text-light);
        }
        /* Basit CSS reset */
        body, h1, h2, h3, p, a, ul, li {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        a {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col">
    <header class="border-b border-primary/20">
        <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
            <a href="/" class="flex items-center gap-3">
                <h2 class="text-xl font-bold">simscent</h2>
            </a>
            <nav class="hidden items-center gap-8 md:flex">
                <a class="text-sm font-medium hover:text-primary" href="/">Home</a>
                <a class="text-sm font-bold text-primary" href="/blog">Blog</a>
                <a class="text-sm font-medium hover:text-primary" href="/about">About</a>
                <a class="text-sm font-medium hover:text-primary" href="/contact">Contact</a>
            </nav>
            <div class="flex items-center gap-2">
                <button class="hidden rounded-full border border-primary/40 px-5 py-2 text-sm font-bold text-primary hover:bg-primary/10 sm:block">
                    Sign Up
                </button>
            </div>
        </div>
    </header>

    <main class="w-full flex-1">
        <slot />
    </main>

    <footer class="mt-24 border-t border-primary/20">
        <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
            <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
                <div class="flex flex-wrap items-center justify-center gap-x-6 gap-y-2 text-sm text-text-muted">
                    <a class="hover:text-primary" href="#">Privacy Policy</a>
                    <a class="hover:text-primary" href="#">Terms of Service</a>
                    <a class="hover:text-primary" href="#">Contact Us</a>
                </div>
            </div>
            <p class="mt-8 text-center text-sm text-text-muted/70">
                Â© {new Date().getFullYear()} simscent. All rights reserved.
            </p>
        </div>
    </footer>
</body>
</html>
