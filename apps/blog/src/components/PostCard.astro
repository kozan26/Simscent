---
const { post } = Astro.props;
const href = `/posts/${post.slug}/`;
const img = post.data.heroImage ?? 'https://placehold.co/1200x800/e2e8f0/64748b?text=Blog';
const d = new Date(post.data.date);
---
<a class="card" href={href}>
  <img class="thumb" src={img} alt={post.data.title} loading="lazy"/>
  <div style="padding:12px 14px 16px">
    <div class="meta">{d.toLocaleDateString('tr-TR')}</div>
    <h3 class="title" style="margin:6px 0 4px">{post.data.title}</h3>
    {post.data.description && <p class="desc">{post.data.description}</p>}
  </div>
</a>
