---
// apps/blog/src/components/PostCard.astro

import type { CollectionEntry } from 'astro:content';

interface Props {
	post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const url = `/posts/${post.slug}/`;
const img = post.data.heroImage ?? 'https://placehold.co/1280x800/fdfbf7/6b5e51?text=simscent';
---
<a href={url} class="card-link group">
    <div class="image-wrapper">
        <img 
            class="thumb" 
            src={img} 
            alt={post.data.title} 
            loading="lazy"
        />
    </div>
    <div class="content">
        <h3 class="title">
            {post.data.title}
        </h3>
        <p class="description">
            {post.data.description}
        </p>
    </div>
</a>

<style>
    .card-link {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        transition: transform 0.2s ease-in-out;
    }
    .card-link:hover {
        transform: translateY(-5px);
    }
    .image-wrapper {
        aspect-ratio: 16 / 10; /* Or 4/3 */
        width: 100%;
        overflow: hidden;
        border-radius: 1rem; /* rounded-xl */
    }
    .thumb {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .content {
        margin-top: 1rem;
    }
    .title {
        font-size: 1.125rem; /* text-lg */
        font-weight: 700;
        color: var(--text-light);
    }
    .group:hover .title {
        color: var(--primary);
    }
    .description {
        margin-top: 0.5rem;
        font-size: 0.9rem;
        color: var(--text-muted);
        line-height: 1.6;
    }
</style>
