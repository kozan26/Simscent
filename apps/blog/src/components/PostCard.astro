---
const { post } = Astro.props;
const url = `/posts/${post.slug}/`;
const img = post.data.heroImage ?? 'https://placehold.co/1280x800/e2e8f0/64748b?text=Blog';
const d = new Date(post.data.date);
---
<a class="card" href={url}>
  <img class="thumb" src={img} alt={post.data.title} loading="lazy"/>
  <div class="meta">
    <span>{d.toLocaleDateString('tr-TR')}</span>
  </div>
  <h2 class="title">{post.data.title}</h2>
  {post.data.description && <p style="color:var(--muted)">{post.data.description}</p>}
</a>
