---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((p) => ({ params: { slug: p.slug }, props: { post: p } }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const heroImg = post.data.heroImage ?? 'https://images.unsplash.com/photo-1523292562811-8fa7962a78c8?q=80&w=1600&auto=format&fit=crop';
---
<BaseLayout title={`${post.data.title} â€” simscent`} description={post.data.description}>
  <section class="hero" style="min-height:380px">
    <div class="hero-img" style={`background-image:url('${heroImg}')`}></div>
    <h1>{post.data.title}</h1>
    {post.data.description && <p>{post.data.description}</p>}
  </section>

  <article class="prose">
    <Content />
  </article>
</BaseLayout>
