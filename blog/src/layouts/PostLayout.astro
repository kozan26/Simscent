---
const { frontmatter } = Astro.props;
const { title, description, date, category, author, readTime, image } = frontmatter;
---
<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} — simscent Blog</title>
  <meta name="description" content={description}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet">
  <style is:global>
    :root{
      --brand-primary:#B99B6B;--brand-secondary:#A08C62;--text:#3a3a3a;--muted:#888;
      --border:#eee;--card:#fff;--shell:#f9f8f6;
    }
    *{box-sizing:border-box;margin:0;padding:0}
    html{scroll-behavior:smooth}
    body{font-family:'Inter',sans-serif;color:var(--text);line-height:1.7;background:#fafafa}
    
    /* Header */
    header{background:rgba(255,255,255,.85);backdrop-filter:blur(12px);-webkit-backdrop-filter:blur(12px);border-bottom:1px solid rgba(185,155,107,.12);position:sticky;top:0;z-index:100;box-shadow:0 2px 8px rgba(0,0,0,.02)}
    .header-inner{max-width:1320px;margin:0 auto;padding:20px 24px;display:flex;align-items:center;justify-content:space-between}
    .brand{display:flex;align-items:center;gap:12px;font-family:'Playfair Display',serif;font-size:24px;font-weight:800;color:var(--text);text-decoration:none;transition:transform .2s}
    .brand:hover{transform:scale(1.02)}
    .logo{width:36px;height:36px}
    nav{display:flex;gap:32px;align-items:center}
    nav a{color:var(--text);text-decoration:none;font-weight:600;font-size:15px;transition:all .2s;position:relative;padding:4px 0}
    nav a::after{content:'';position:absolute;bottom:0;left:0;width:0;height:2px;background:var(--brand-primary);transition:width .3s ease}
    nav a:hover::after{width:100%}
    
    /* Back Link */
    .back-link{max-width:800px;margin:32px auto 0;padding:0 24px}
    .back-link a{color:var(--brand-secondary);text-decoration:none;font-weight:600;display:inline-flex;align-items:center;gap:8px;transition:all .2s;padding:8px 16px;border-radius:8px}
    .back-link a:hover{gap:12px;background:rgba(185,155,107,.08)}
    
    /* Article Header */
    .article-header{max-width:800px;margin:48px auto 40px;padding:0 24px}
    .category-badge{background:linear-gradient(135deg,var(--brand-primary),var(--brand-secondary));color:#fff;padding:8px 18px;border-radius:999px;font-weight:800;font-size:11px;text-transform:uppercase;letter-spacing:1px;display:inline-block;margin-bottom:24px;box-shadow:0 4px 12px rgba(185,155,107,.3)}
    .article-title{font-family:'Playfair Display',serif;font-size:clamp(32px,5vw,52px);font-weight:800;line-height:1.12;margin-bottom:24px;color:#1a1a1a;letter-spacing:-.02em}
    .article-meta{color:var(--muted);font-size:15px;display:flex;gap:16px;align-items:center;flex-wrap:wrap;padding:20px 0;border-top:1px solid var(--border);border-bottom:1px solid var(--border)}
    .meta-item{display:flex;align-items:center;gap:8px}
    .author-avatar{width:40px;height:40px;border-radius:50%;background:linear-gradient(135deg,var(--brand-primary),var(--brand-secondary));display:flex;align-items:center;justify-content:center;color:#fff;font-weight:700;font-size:16px}
    
    /* Featured Image */
    .featured-image{max-width:1200px;margin:48px auto;padding:0 24px}
    .featured-image img{width:100%;aspect-ratio:16/9;object-fit:cover;border-radius:24px;box-shadow:0 24px 80px rgba(0,0,0,.12)}
    
    /* Article Content */
    .article-content{max-width:720px;margin:0 auto 80px;padding:0 24px;font-size:18px;line-height:1.8;color:#333}
    
    .article-content > p:first-of-type{font-size:21px;line-height:1.7;color:#1a1a1a;font-weight:500}
    .article-content > p:first-of-type::first-letter{font-size:72px;line-height:60px;float:left;font-family:'Playfair Display',serif;font-weight:800;color:var(--brand-primary);margin:4px 12px 0 0}
    
    .article-content h2{font-family:'Playfair Display',serif;font-size:36px;font-weight:800;margin:56px 0 24px;color:#1a1a1a;letter-spacing:-.02em;padding-bottom:16px;border-bottom:3px solid var(--shell)}
    .article-content h3{font-family:'Playfair Display',serif;font-size:26px;font-weight:700;margin:40px 0 20px;color:#1a1a1a;letter-spacing:-.01em}
    .article-content h4{font-size:20px;font-weight:700;margin:32px 0 16px;color:#1a1a1a}
    
    .article-content p{margin-bottom:24px;color:#444}
    .article-content strong{color:#1a1a1a;font-weight:700}
    
    .article-content a{color:var(--brand-secondary);text-decoration:none;border-bottom:2px solid rgba(185,155,107,.3);transition:all .2s;font-weight:600}
    .article-content a:hover{border-bottom-color:var(--brand-primary);color:var(--brand-primary)}
    
    .article-content ul,.article-content ol{margin:24px 0 24px 0;padding-left:28px}
    .article-content li{margin-bottom:12px;line-height:1.7}
    .article-content li::marker{color:var(--brand-primary);font-weight:700}
    
    .article-content blockquote{border-left:4px solid var(--brand-primary);background:var(--shell);padding:24px 24px 24px 28px;margin:40px 0;font-style:italic;color:#555;border-radius:0 12px 12px 0;font-size:19px;line-height:1.7}
    .article-content blockquote p{margin-bottom:0}
    
    .article-content img{width:100%;border-radius:16px;margin:40px 0;box-shadow:0 12px 40px rgba(0,0,0,.08)}
    
    .article-content code{background:#f5f5f5;padding:3px 10px;border-radius:6px;font-size:16px;color:#d63384;font-family:'Courier New',monospace;border:1px solid #e5e5e5}
    .article-content pre{background:#1a1a1a;padding:24px;border-radius:16px;overflow-x:auto;margin:32px 0;box-shadow:0 8px 24px rgba(0,0,0,.15)}
    .article-content pre code{background:none;padding:0;color:#fff;border:none;font-size:14px}
    
    /* Reading Progress */
    .progress-bar{position:fixed;top:0;left:0;height:3px;background:linear-gradient(90deg,var(--brand-primary),var(--brand-secondary));z-index:101;transition:width .1s ease}
    
    /* Related Section */
    .related-section{max-width:720px;margin:60px auto 0;padding:40px 24px 0;border-top:2px solid var(--shell)}
    .related-title{font-family:'Playfair Display',serif;font-size:28px;font-weight:800;margin-bottom:24px;color:#1a1a1a}
    .cta-box{background:linear-gradient(135deg,#f9f8f6,#fff);border:2px solid var(--border);border-radius:20px;padding:40px;text-align:center}
    .cta-box h3{font-family:'Playfair Display',serif;font-size:24px;font-weight:800;margin-bottom:16px}
    .cta-box p{color:var(--muted);margin-bottom:24px;font-size:16px}
    .cta-btn{display:inline-flex;align-items:center;gap:10px;background:#1a1a1a;color:#fff;padding:14px 28px;border-radius:12px;font-weight:700;text-decoration:none;transition:all .3s;font-size:15px}
    .cta-btn:hover{background:var(--brand-primary);transform:translateY(-2px);box-shadow:0 8px 20px rgba(185,155,107,.3)}
    
    /* Footer */
    footer{margin-top:80px;padding:60px 24px 40px;background:#fff;border-top:1px solid rgba(0,0,0,.06)}
    .footer-content{max-width:1320px;margin:0 auto;text-align:center}
    .footer-brand{font-family:'Playfair Display',serif;font-size:28px;font-weight:800;margin-bottom:12px}
    .footer-desc{color:var(--muted);font-size:14px;margin-bottom:24px}
    .footer-links{display:flex;gap:24px;justify-content:center;margin-bottom:24px}
    .footer-links a{color:var(--muted);text-decoration:none;font-size:14px;transition:color .2s}
    .footer-links a:hover{color:var(--brand-primary)}
    .footer-bottom{padding-top:24px;border-top:1px solid var(--border);color:var(--muted);font-size:13px}
    
    @media(max-width:639px){
      nav{display:none}
      .article-content > p:first-of-type::first-letter{font-size:56px;line-height:48px}
    }
  </style>
</head>
<body>
  <div class="progress-bar" id="progressBar"></div>
  
  <header>
    <div class="header-inner">
      <a href="https://www.simscent.com" class="brand">
        <svg class="logo" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
          <circle cx="50" cy="50" r="45" fill="none" stroke="#B99B6B" stroke-width="3"/>
          <path d="M50 25 L50 75 M35 40 L50 25 L65 40" stroke="#B99B6B" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        simscent
      </a>
      <nav>
        <a href="https://www.simscent.com">Ana Sayfa</a>
        <a href="/">Blog</a>
      </nav>
    </div>
  </header>
  
  <div class="back-link">
    <a href="/">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
      Tüm Yazılar
    </a>
  </div>
  
  <article>
    <header class="article-header">
      {category && <span class="category-badge">{category}</span>}
      <h1 class="article-title">{title}</h1>
      <div class="article-meta">
        {author && (
          <div class="meta-item">
            <div class="author-avatar">{author.charAt(0)}</div>
            <span style="font-weight:600;color:var(--text)">{author}</span>
          </div>
        )}
        {date && (
          <div class="meta-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
            <time datetime={date}>{new Date(date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
          </div>
        )}
        {readTime && (
          <div class="meta-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
            <span>{readTime} dakika okuma</span>
          </div>
        )}
      </div>
    </header>
    
    {image && (
      <div class="featured-image">
        <img src={image} alt={title} />
      </div>
    )}
    
    <div class="article-content">
      <slot />
    </div>

    <div class="related-section">
      <div class="cta-box">
        <h3>Parfüm Keşfine Başlayın</h3>
        <p>Size en uygun parfümleri bulmak için tercihlerinizi analiz ediyoruz</p>
        <a href="https://www.simscent.com" class="cta-btn">
          simscent'i Keşfet
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
      </div>
    </div>
  </article>
  
  <footer>
    <div class="footer-content">
      <div class="footer-brand">simscent</div>
      <p class="footer-desc">İmza kokunu keşfet</p>
      <div class="footer-links">
        <a href="https://www.simscent.com">Ana Sayfa</a>
        <a href="/">Blog</a>
        <a href="https://www.simscent.com#results">Koleksiyon</a>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 simscent. Tüm hakları saklıdır.</p>
      </div>
    </div>
  </footer>

  <script>
    // Reading progress bar
    const progressBar = document.getElementById('progressBar');
    if (progressBar) {
      window.addEventListener('scroll', () => {
        const windowHeight = window.innerHeight;
        const documentHeight = document.documentElement.scrollHeight;
        const scrollTop = window.scrollY;
        const progress = (scrollTop / (documentHeight - windowHeight)) * 100;
        progressBar.style.width = `${Math.min(progress, 100)}%`;
      });
    }
  </script>
</body>
</html>
