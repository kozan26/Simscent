---
const { frontmatter } = Astro.props;
const { title, description, date, category, author, readTime, image } = frontmatter;
---
<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} — simscent Blog</title>
  <meta name="description" content={description}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet">
  <style is:global>
    :root{
      --brand-primary:#B99B6B;--brand-secondary:#A08C62;--text:#3a3a3a;--muted:#888;
      --border:#eee;--card:#fff;--shell:#f9f8f6;
    }
    *{box-sizing:border-box;margin:0;padding:0}
    html{scroll-behavior:smooth}
    body{font-family:'Inter',sans-serif;color:var(--text);line-height:1.7;background:#fafafa}
    
    header{background:rgba(255,255,255,.85);backdrop-filter:blur(12px);border-bottom:1px solid rgba(185,155,107,.12);position:sticky;top:0;z-index:100}
    .header-inner{max-width:1320px;margin:0 auto;padding:20px 24px;display:flex;align-items:center;justify-content:space-between}
    .brand{font-family:'Playfair Display',serif;font-size:24px;font-weight:800;color:var(--text);text-decoration:none}
    nav{display:flex;gap:24px}
    nav a{color:var(--text);text-decoration:none;font-weight:600;font-size:15px;transition:color .2s}
    nav a:hover{color:var(--brand-primary)}
    
    .article-header{max-width:800px;margin:60px auto 40px;padding:0 24px;text-align:center}
    .category-badge{background:var(--brand-primary);color:#fff;padding:6px 16px;border-radius:999px;font-weight:700;font-size:12px;text-transform:uppercase;letter-spacing:.5px;display:inline-block;margin-bottom:20px}
    .article-title{font-family:'Playfair Display',serif;font-size:clamp(32px,5vw,48px);font-weight:800;line-height:1.15;margin-bottom:20px;color:#1a1a1a}
    .article-meta{color:var(--muted);font-size:15px;display:flex;gap:16px;justify-content:center;align-items:center;flex-wrap:wrap}
    
    .featured-image{max-width:1200px;margin:40px auto;padding:0 24px}
    .featured-image img{width:100%;aspect-ratio:16/9;object-fit:cover;border-radius:24px;box-shadow:0 20px 60px rgba(0,0,0,.1)}
    
    .article-content{max-width:720px;margin:0 auto 80px;padding:0 24px;font-size:18px;line-height:1.8}
    .article-content h2{font-family:'Playfair Display',serif;font-size:32px;font-weight:700;margin:48px 0 20px;color:#1a1a1a}
    .article-content h3{font-family:'Playfair Display',serif;font-size:24px;font-weight:700;margin:36px 0 16px;color:#1a1a1a}
    .article-content p{margin-bottom:20px;color:#444}
    .article-content a{color:var(--brand-secondary);text-decoration:none;border-bottom:1px solid rgba(185,155,107,.3);transition:border-color .2s}
    .article-content a:hover{border-bottom-color:var(--brand-primary)}
    .article-content ul,.article-content ol{margin:20px 0 20px 24px}
    .article-content li{margin-bottom:8px}
    .article-content blockquote{border-left:4px solid var(--brand-primary);padding-left:24px;margin:32px 0;font-style:italic;color:var(--muted)}
    .article-content img{width:100%;border-radius:16px;margin:32px 0}
    .article-content code{background:#f5f5f5;padding:2px 8px;border-radius:4px;font-size:16px;color:#d63384}
    .article-content pre{background:#f5f5f5;padding:20px;border-radius:12px;overflow-x:auto;margin:24px 0}
    .article-content pre code{background:none;padding:0}
    
    .back-link{max-width:720px;margin:0 auto 40px;padding:0 24px}
    .back-link a{color:var(--brand-secondary);text-decoration:none;font-weight:600;display:inline-flex;align-items:center;gap:8px;transition:gap .2s}
    .back-link a:hover{gap:12px}
    
    footer{margin-top:80px;padding:40px 24px;border-top:1px solid var(--border);text-align:center;color:var(--muted);font-size:14px}
  </style>
</head>
<body>
  <header>
    <div class="header-inner">
      <a href="https://simscent.com" class="brand">simscent</a>
      <nav>
        <a href="https://simscent.com">Ana Sayfa</a>
        <a href="/">Blog</a>
      </nav>
    </div>
  </header>
  
  <div class="back-link">
    <a href="/">← Tüm Yazılar</a>
  </div>
  
  <article>
    <header class="article-header">
      {category && <span class="category-badge">{category}</span>}
      <h1 class="article-title">{title}</h1>
      <div class="article-meta">
        {author && <span>{author}</span>}
        {author && (date || readTime) && <span>•</span>}
        {date && <time datetime={date}>{new Date(date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>}
        {readTime && date && <span>•</span>}
        {readTime && <span>{readTime} dakika okuma</span>}
      </div>
    </header>
    
    {image && (
      <div class="featured-image">
        <img src={image} alt={title} />
      </div>
    )}
    
    <div class="article-content">
      <slot />
    </div>
  </article>
  
  <footer>
    <p>&copy; 2025 simscent. Tüm hakları saklıdır.</p>
  </footer>
</body>
</html>
